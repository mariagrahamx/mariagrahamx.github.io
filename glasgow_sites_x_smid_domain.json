{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "data": {
    "url": "https://raw.githubusercontent.com/mariagrahamx/mariagrahamx.github.io/main/project/glasgow_simd_2020_distance_wide.csv",
    "format": {"type": "csv"}
  },
  "title": {
    "text": "Distance to Nearest Derelict or Vacant Site by SIMD Domain Rank",
    "subtitle": [
      "Lower SIMD ranks correspond to higher levels of deprivation",
      "Source: Scottish Index of Multiple Deprivation (SIMD) 2020"
    ]
  },
  "params": [
    {
      "name": "zoom",
      "select": {
        "type": "interval",
        "zoom": "wheel!",
        "translate": "[pointerdown, pointerup] > pointermove!"
      },
      "bind": "scales"
    }
  ],
  "vconcat": [
    {
      "hconcat": [
        {
          "title": "Income Domain",
          "mark": {
            "type": "point",
            "filled": true,
            "opacity": 0.65,
            "size": 35
          },
          "width": 260,
          "height": 210,
          "encoding": {
            "x": {
              "field": "dist_km",
              "type": "quantitative",
              "title": "Distance to nearest site (km)",
              "scale": {"domain": [0, 1.2]}
            },
            "y": {
              "field": "Income_Domain_Rank",
              "type": "quantitative",
              "title": "SIMD Rank",
              "scale": {"domain": [0, 7100]}
            },
            "color": {"value": "#1f77b4"},
            "tooltip": [
              {"field": "Datazone", "type": "nominal"},
              {
                "field": "dist_km",
                "type": "quantitative",
                "format": ".2f",
                "title": "Distance (km)"
              },
              {
                "field": "Income_Domain_Rank",
                "type": "quantitative",
                "title": "Income Rank"
              }
            ]
          }
