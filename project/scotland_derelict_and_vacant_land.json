{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
    "text": "Derelict and Vacant Land in Scotland",
    "subtitle": [
      "Source: ONS & Scottish Vacant and Derelict Land Survey (SVDLS)",
      "Distribution by Local Planning Authority (2023)"
    ]
  },
  "width": 375,
  "height": 560,
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mariagrahamx/mariagrahamx.github.io/refs/heads/main/charts/wk7_uk_local_planning_authorities_2023.topojson",
        "format": {
          "type": "topojson",
          "feature": "wk7_uk_local_planning_authorities_2023"
        }
      },
      "transform": [{"filter": "indexof(datum.properties.LPA23CD, 'S') == 0"}],
      "projection": {"type": "mercator"},
      "mark": {
        "type": "geoshape",
        "fill": "lightgray",
        "stroke": "white",
        "strokeWidth": 0.5
      }
    },

      {
  "data": {
    "url": "https://raw.githubusercontent.com/mariagrahamx/mariagrahamx.github.io/refs/heads/main/charts/wk7_uk_local_planning_authorities_2023.topojson",
    "format": {
      "type": "topojson",
      "feature": "wk7_uk_local_planning_authorities_2023"
    }
  },
  "transform": [
    { "filter": "indexof(datum.properties.LPA23CD, 'S') == 0" },
    {
      "filter": "indexof(['Inverclyde LPA','Stirling LPA','Clackmannanshire LPA','East Dunbartonshire LPA','East Lothian LPA','East Renfrewshire LPA','Falkirk LPA','Glasgow City LPA','Midlothian LPA','North Lanarkshire LPA','Renfrewshire LPA','South Lanarkshire LPA','City of Edinburgh LPA','West Dunbartonshire LPA','West Lothian LPA', 'Loch Lomond and the Trossachs National Park LPA'], datum.properties.LPA23NM) >= 0"
    }
  ],
  "projection": { "type": "mercator" },
  "mark": {
    "type": "geoshape",
    "fill": "#5b03e7",
    "fillOpacity": 0.12,
    "stroke": "#5b03e7",
    "strokeOpacity": 0.65,
    "strokeWidth": 1.2
  }
},

    {
      "data": {
        "url": "https://raw.githubusercontent.com/mariagrahamx/mariagrahamx.github.io/refs/heads/main/wk7/wk7_derelict_land_points_scotland.csv"
      },
      "projection": {"type": "mercator"},
      "mark": {
        "type": "circle",
        "opacity": 0.7,
        "stroke": "white",
        "strokeWidth": 0.5
      },
      "encoding": {
        "longitude": {"field": "lon", "type": "quantitative"},
        "latitude": {"field": "lat", "type": "quantitative"},
        "color": {
          "field": "Site Type",
          "type": "nominal",
          "scale": {
            "domain": ["Derelict", "Vacant Land", "Vacant Land and Buildings"],
            "range": ["#1B9E77", "#D95F02", "#7570B3"]
          },
          "title": "Site Type"
        },
        "tooltip": [
          {"field": "Site Type", "type": "nominal", "title": "Type"},
          {"field": "Planning Authority ", "type": "nominal", "title": "Planning Authority"},
          {"field": "Address", "type": "nominal", "title": "Address"}
        ]
      }
    }
  ],
  "config": {
    "font": "Montserrat, sans-serif",
    "view": {"stroke": "transparent"},
    "background": "#EFEFF6",
    "legend": {
      "titleFont": "Montserrat, sans-serif",
      "titleFontSize": 15,
      "titleColor": "#1f1b5e",
      "labelColor": "#616373",
      "labelFontSize": 13
    },
    "title": {
      "anchor": "start",
      "offset": 0,
      "font": "Montserrat-Bold, sans-serif",
      "color": "#1f1b5e",
      "fontSize": 16,
      "subtitleFontSize": 14,
      "subtitleColor": "#616373",
      "subtitlePadding": 5,
      "subtitleFontStyle": "italic"
    },
    "axis": {
      "labelFontSize": 11, 
      "titleFontSize": 12,
      "titleColor": "#1f1b5e",
      "labelColor": "#616373"
      }
    }
}