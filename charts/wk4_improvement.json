{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "description": "Bar chart version of the Hospital and Outpatient Care pie chart",
  "data": {
    "values": [
      {"category": "Contributions", "value": 91.6},
      {"category": "Other Third Party Services - Legal Entity", "value": 3.1},
      {"category": "Consumable Material", "value": 2.74},
      {"category": "Labor Leasing", "value": 1.12},
      {"category": "Aid", "value": 0.59},
      {"category": "Others", "value": 0.85}
    ]
  },
  "width": 450,
  "height": 300,
  "title": {
    "text": "Spending within Hospital and Outpatient Care",
    "offset": 30,
    "fontWeight": "bold",
    "anchor": "start",
    "color": "#10377b",
    "fontSize": 14,
    "subtitle": ["Source: Portal da TransparÃªncia (Governo Brasileiro)"],
    "subtitleColor": "#333333",
    "subtitleFontWeight": "normal",
    "subtitleFontSize": 12
  },
  "encoding": {
    "y": {
      "field": "category",
      "type": "nominal",
      "sort": "-x",
      "axis": {"title": "Category", "labelLimit": 220}
    }
  },
  "layer": [
    {
      "mark": {"type": "bar", "cornerRadiusEnd": 3},
      "encoding": {
        "x": {
          "field": "value",
          "type": "quantitative",
          "title": "Share of Spending (%)",
          "scale": {"domain": [0, 100]},
          "axis": {"format": ".0f"}
        },
        "color": {
          "field": "category",
          "type": "nominal",
          "scale": {
            "range": [
              "#E69F00",
              "#56B4E9",
              "#009E73",
              "#F0E442",
              "#0072B2",
              "#D55E00"
            ]
          },
          "legend": {"title": "", "orient": "bottom", "columns": 2}
        },
        "tooltip": [
          {"field": "category", "type": "nominal", "title": "Category"},
          {
            "field": "value",
            "type": "quantitative",
            "title": "Share of Spending (%)",
            "format": ".1f"
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "middle",
        "dx": 4,
        "fontSize": 11
      },
      "encoding": {
        "x": {
          "field": "value",
          "type": "quantitative",
          "scale": {"domain": [0, 100]}
        }
      }
    }
  ],
  "config": {"axis": {"labelFontSize": 11, "titleFontSize": 12}}
}