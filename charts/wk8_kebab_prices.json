{
  "$schema": "https://vega.github.io/schema/vega-lite/v6.json",
  "data": {
    "url": "https://raw.githubusercontent.com/mariagrahamx/mariagrahamx.github.io/refs/heads/main/wk8/wk8_kebab_prices.csv"
  },
  "width": 700,
  "height": 450,
  "title": {
    "text": "Average Kebab Prices Over Time",
    "subtitle": ["Source: ONS Microdata via Davies"],
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 14,
    "fontSize": 17,
    "anchor": "middle",
    "subtitleColor": "#5d5d5d"
  },
  "params": [
    {
      "name": "RegionSelect",
      "value": "London",
      "bind": {
        "input": "select",
        "options": [
          null,
          "East Anglia",
          "East Midlands",
          "London",
          "North",
          "North West",
          "Northern Ireland",
          "Scotland",
          "South East",
          "South West",
          "Wales",
          "West Midlands",
          "Yorkshire & Humber"
        ],
        "name": "Select a region: "
      }
    }
  ],
  "transform": [
    {"filter": "RegionSelect == null || datum.region == RegionSelect"}
  ],
  "layer": [
    {
      "encoding": {
        "x": {
          "field": "date",
          "type": "temporal",
          "timeUnit": "yearmonth",
          "axis": {"format": "%Y", "title": "Year"}
        },
        "y": {
          "field": "mean",
          "type": "quantitative",
          "title": "Mean price (Â£)"
        },
        "color": {"field": "region", "type": "nominal", "title": "Region"}
      },
      "layer": [
        {"mark": "line"},
        {
          "params": [
            {
              "name": "label",
              "select": {
                "type": "point",
                "encodings": ["x"],
                "nearest": true,
                "on": "pointerover"
              }
            }
          ],
          "mark": "point",
          "encoding": {
            "opacity": {
              "condition": {"param": "label", "empty": false, "value": 1},
              "value": 0
            }
          }
        }
      ]
    },
    {
      "transform": [{"filter": {"param": "label", "empty": false}}],
      "layer": [
        {
          "mark": {"type": "rule", "color": "gray"},
          "encoding": {
            "x": {"type": "temporal", "field": "date", "aggregate": "min"}
          }
        },
        {
          "encoding": {
            "text": {"type": "quantitative", "field": "mean", "format": ".2f"},
            "x": {"type": "temporal", "field": "date"},
            "y": {"type": "quantitative", "field": "mean"},
            "color": {
              "field": "region",
              "type": "nominal",
              "title": "Region",
              "scale": {
                "domain": [
                  "East Anglia",
                  "East Midlands",
                  "London",
                  "North",
                  "North West",
                  "Northern Ireland",
                  "Scotland",
                  "South East",
                  "South West",
                  "Wales",
                  "West Midlands",
                  "Yorkshire & Humber"
                ],
                "range": [
                  "#66c2a5",
                  "#fc8d62",
                  "#8da0cb",
                  "#e78ac3",
                  "#a6d854",
                  "#ffd92f",
                  "#e5c494",
                  "#b3b3b3",
                  "#1b9e77",
                  "#d95f02",
                  "#7570b3",
                  "#e7298a"
                ]
              }
            }
          },
          "layer": [
            {
              "mark": {
                "type": "text",
                "stroke": "white",
                "strokeWidth": 2,
                "align": "left",
                "dx": 5,
                "dy": -5
              }
            },
            {
              "mark": {"type": "text", "align": "left", "dx": 5, "dy": -5},
              "encoding": {"color": {"type": "nominal", "field": "region"}}
            }
          ]
        }
      ]
    }
  ],
  "config": {}
}