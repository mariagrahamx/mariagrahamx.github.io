{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Wales Local Authorities",
  "width": 300,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/MappingWorkshop/geo_data/LAD_WLS_2025_05.topojson",
    "format": {"type": "topojson", "feature": "object_name"}
  },
  "transform": [
    {
      "lookup": "properties.LAD25CD",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/jhellingsdata/RADataHub/refs/heads/main/MappingWorkshop/series_data/pct65_plus_LAD_WLS.csv"
        },
        "key": "geo_id",
        "fields": ["value", "date"]
      }
    },
    {"filter": "datum.date == '2024-06-30'"},
    {"calculate": "datum.value/100", "as": "value"}
  ],
  "mark": {"type": "geoshape", "stroke": "white", "strokeWidth": 0.5},
  "projection": {"type": "mercator"},
  "encoding": {
    "color": {
      "field": "value",
      "type": "quantitative",
      "legend": {"title": "% Of Pop", "format": "%"}
    },
    "tooltip": [
      {"field": "properties.LAD25NM", "title": "Local Authority"},
      {"field": "value", "title": " % population (65+)", "format": ".1%"}
    ]
  },
  "config": {}
}